<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  app:cardCornerRadius="8dp"
  app:cardElevation="2dp"
>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
  >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
    >
      <TextView
        android:id="@+id/numeroCuotaTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cuota #1"
        android:textStyle="bold"
        android:textSize="14sp"
      />
      <TextView
        android:id="@+id/fechaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-01-01"
        android:textSize="12sp"
      />
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginVertical="8dp"
      android:background="#E0E0E0"
    />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
    >
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cuota:"
        android:textSize="12sp"
      />
      <TextView
        android:id="@+id/montoCuotaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100.00"
        android:textStyle="bold"
        android:textSize="12sp"
      />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="4dp"
    >
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Capital:"
        android:textSize="12sp"
      />
      <TextView
        android:id="@+id/capitalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$80.00"
        android:textSize="12sp"
      />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="4dp"
    >
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="InterÃ©s:"
        android:textSize="12sp"
      />
      <TextView
        android:id="@+id/interesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20.00"
        android:textSize="12sp"
      />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="4dp"
    >
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Saldo Pendiente:"
        android:textSize="12sp"
      />
      <TextView
        android:id="@+id/saldoPendienteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$920.00"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_dark"
      />
    </LinearLayout>
    <TextView
      android:id="@+id/estadoTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Pendiente"
      android:textSize="11sp"
      android:textColor="@android:color/holo_orange_dark"
      android:textStyle="italic"
    />
  </LinearLayout>
</com.google.android.material.card.MaterialCardView>
