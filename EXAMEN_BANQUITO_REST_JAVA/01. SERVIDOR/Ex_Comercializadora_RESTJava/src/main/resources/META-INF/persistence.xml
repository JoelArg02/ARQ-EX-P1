<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <!-- Persistence Unit -->
    <persistence-unit name="comercializadoraPU" transaction-type="RESOURCE_LOCAL">
        <!-- Forza EclipseLink (el provider que estÃ¡ usando GlassFish/Payara) -->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!-- Registrar entidades explicitamente -->
        <class>ec.edu.pinza.ex_comercializadora_restjava.entities.ClienteCom</class>
        <class>ec.edu.pinza.ex_comercializadora_restjava.entities.Producto</class>
        <class>ec.edu.pinza.ex_comercializadora_restjava.entities.Factura</class>
        <class>ec.edu.pinza.ex_comercializadora_restjava.entities.DetalleFactura</class>
        
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <!-- puerto 3306 porque tu contenedor mysql-db expone 3306:3306 -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/comercializadora_db?createDatabaseIfNotExist=true&amp;useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            
            <!-- EclipseLink/Hibernate common props -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
